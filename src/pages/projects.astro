---
import testImage from '../assets/image/3.png'

import '../styles/font.css'
---

<main class='main'>
  <div class='wrapper'>
    <div>
        <h2 class='first'>KAZUKI <br/> PORTFOLIO</h2>
        
    </div>
    <div>
        <h2 class='last'>KAZUKI <br/> PORTFOLIO</h2>
    </div>
    <img src={testImage} />
  </div>
</main>

<style>
  .main {
    height: 100vh;
    background: #333;
    padding: 200px;
  }

  .wrapper {
    font-family: aktiv-grotesk, sans-serif;
    position: relative;
  }

  .wrapper h2 {
    top:50%;
    min-height: 150px;
    line-height: 100%;
    letter-spacing: 0px;
    color: white;
    transform:  scale(1.15);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    font-size: 5vw;
    font-weight: 800;
    font-style: normal;
    position: absolute;
    left: 13%;
    top: 130px;
    font-family: aktiv-grotesk-extended, sans-serif;
  }

  h2.last {
    color: transparent;
    -webkit-text-stroke: 1px white;
    z-index: 10;
  }

  h2.active {
    position: absolute;
    font-size: 6vw;
    transform: translateX(-15%);
    top: 80px;
  }

  .wrapper img {
    position: absolute;
    width: 1000px;
    height: auto;
    left: 40%;
    
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
    /* transform: scale(1); */
  }

  .active {
    transform: scale(1.2);
  }
</style>

<script>
  ;(document.querySelector('.wrapper') as HTMLDivElement).addEventListener(
    'mouseover',
    () => {
      const titles = document.querySelectorAll('h2')
      const img = document.querySelector('img')!

      titles.forEach((title) => title.classList.add('active'))
      img.classList.add('active')
    },
  )
  ;(document.querySelector('.wrapper') as HTMLDivElement).addEventListener(
    'mouseout',
    () => {
      const titles = document.querySelectorAll('h2')
      const img = document.querySelector('img')!

      titles.forEach((title) => title.classList.remove('active'))
      img.classList.remove('active')
    },
  )
</script>
