---
import testImage from '../assets/image/3.png'

import '../styles/global.css'
---

<main class='main'>
  <section class='projets'>
    <div class='wrapper'>
      <div class='titles'>
        <h2 class='first'>KAZUKI <br /> PORTFOLIO</h2>
        <h2 class='last'>KAZUKI <br /> PORTFOLIO</h2>
      </div>
      <div class='image'><img src={testImage} /></div>
    </div>
  </section>
</main>

<style>
  .projets {
    height: 100vh;
    width: 100vw;
    background: #333;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .wrapper {
    font-family: aktiv-grotesk, sans-serif;
    position: fixed;
    height: 60%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .titles {
    font-family: var(--primary-font-family);
    letter-spacing: 4px;

    position: relative;
    height: 100%;
    width: 35%;
    left: 13%;
  }

  .titles h2 {
    font-weight: 800;
    font-size: 6vw;
    color: white;
    font-style: normal;
    position: absolute;
    line-height: 100%;
    top: 50%;
    transform: translateY(-50%);
  }

  .titles h2.last {
    color: transparent;
    -webkit-text-stroke: 2px white;
    z-index: 10;
  }

  .wrapper img {
    /* position: relative; */
    /* width: auto; */
    min-width: 30%;

    height: 85%;
    z-index: 5;

    /* right: 10%; */
    /* min-width: 500px; */
    /* position: absolute; */
  }
  .image {
    position: relative;
  }

  .image::after {
    transition: all 0.85s cubic-bezier(0.165, 0.84, 0.44, 1);
    content: '';
    background: rgb(162, 116, 210);
    padding-bottom: -20px;
    opacity: 0.2;
    width: 100%;
    height: 98.5%;
    top: 0;
    left: 0;
    position: absolute;
  }
  .image.active::after {
    background: none;
  }

  .wrapper h2 {
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  .wrapper img {
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .wrapper h2.active {
    font-size: 7vw;
  }

  .wrapper .image.active img,
  .wrapper .image.active::after {
    transform: scale(1.2);
  }

  .wrapper h2 {
    /* top: 0;
    bottom: 0;
    min-height: 150px;
    line-height: 100%;
    
    color: white; */
    /* transform: scale(1.15); */
    /* transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    font-size: 5vw;
    font-weight: 800;
    font-style: normal; */
    /* position: absolute; */
    /* left: 13%;
    font-family: aktiv-grotesk-extended, sans-serif; */
  }

  /* h2.last {
    color: transparent;
    -webkit-text-stroke: 1px white;
    z-index: 10;
  } */

  /* .wrapper:hover h2 {
    position: absolute;
    font-size: 7vw;
    transform: translateX(-15%);
    top: 80px;
  } */

  .wrapper img {
    /* position: absolute; */
    /* width: auto;
    height: 150px;
    left: 40%;

    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1); */
    /* transform: scale(1); */
  }

  /* .wrapper:hover img {
    transform: scale(1.2);
  } */
</style>

<script>
  ;(document.querySelector('.wrapper') as HTMLDivElement).addEventListener(
    'mouseover',
    () => {
      const titles = document.querySelectorAll('h2')
      const img = document.querySelector('.image')!

      titles.forEach((title) => title.classList.add('active'))
      img.classList.add('active')
    },
  )
  ;(document.querySelector('.wrapper') as HTMLDivElement).addEventListener(
    'mouseout',
    () => {
      const titles = document.querySelectorAll('h2')
      const img = document.querySelector('.image')!

      titles.forEach((title) => title.classList.remove('active'))
      img.classList.remove('active')
    },
  )
</script>
